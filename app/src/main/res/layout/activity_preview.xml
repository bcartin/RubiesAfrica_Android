<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PreviewActivity" android:background="@color/colorPrimary">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/backgroundImageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout6"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:rotation="-20"
                android:id="@+id/imageViewLeft"
                app:layout_constraintDimensionRatio="h,4:3" android:scaleType="fitXY" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="@+id/imageViewCenter" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:id="@+id/imageViewRight"
                android:rotation="20"
                app:layout_constraintDimensionRatio="h,4:3" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="@+id/imageViewCenter" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:scaleType="fitXY"/>
        <ImageView
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:id="@+id/imageViewCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="h,4:3" android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
            android:id="@+id/constraintLayout6">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/imageView5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/rounded_text_frame"
                android:alpha="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text='"Yemisi hates the end of year parties. She doesn’t dance or sing or act, so it’s not fun for her. Join Yemisi as she learns that all stars are different, but they still light up the same.'
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/summaryTextView"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginTop="8dp" android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp" android:fontFamily="@font/boogaloo"
                android:textSize="22sp" android:background="@android:color/transparent"
                android:textColor="@android:color/black"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:id="@+id/homeButton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:background="@drawable/home" android:alpha="0.7"/>
</android.support.constraint.ConstraintLayout>