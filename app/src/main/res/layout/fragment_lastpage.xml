<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/background22">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent" app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@android:color/white"
                android:id="@+id/imageView3" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:alpha="0.7"/>
        <TextView
                android:text="THE END"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/boogaloo"
                android:textSize="24sp" android:textColor="@android:color/black" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/constraintLayout"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/constraintLayout2">
            <TextView
                    android:text="Author(s):"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:fontFamily="@font/boogaloo" android:textSize="22sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            />
            <TextView
                    android:text="Author Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/authoTextView"
                    android:fontFamily="@font/boogaloo" android:textSize="22sp"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textView3"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/constraintLayout2"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/constraintLayout3">

            <TextView
                    android:text="Illustrator(s):"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:fontFamily="@font/boogaloo" android:textSize="22sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="1.0"/>
            <TextView
                    android:text="illustrator Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/illustratorTextView"
                    android:fontFamily="@font/boogaloo" android:textSize="22sp"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/constraintLayout3"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/constraintLayout4">

            <TextView
                    android:text="Editor:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:fontFamily="@font/boogaloo" android:textSize="22sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="Editor Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editorTextView"
                    android:fontFamily="@font/boogaloo" android:textSize="22sp"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/constraintLayout4"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/divider">

            <TextView
                    android:text="Creative Director:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:fontFamily="@font/boogaloo"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="Creative Director Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/creativeDirectorTextView"
                    android:fontFamily="@font/boogaloo" android:textSize="22sp"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintStart_toEndOf="@+id/textView6"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@android:color/black"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="Did you like this story? Spread the word!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:fontFamily="@font/boogaloo" android:textSize="22sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/constraintLayout5">

            <Button
                    android:layout_width="46dp"
                    android:layout_height="46dp" android:id="@+id/facebookButton"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/facebook"/>
            <Button
                    android:layout_width="46dp"
                    android:layout_height="46dp" android:id="@+id/twitterButton"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/facebookButton"
                    android:layout_marginStart="24dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/twitter"/>
            <Button
                    android:layout_width="46dp"
                    android:layout_height="46dp" android:id="@+id/instagramButton"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/twitterButton"
                    android:layout_marginStart="24dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/instagram"/>
            <Button
                    android:layout_width="46dp"
                    android:layout_height="46dp" android:id="@+id/shareButton"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/instagramButton"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/share"/>
        </android.support.constraint.ConstraintLayout>
        <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" android:layout_marginTop="16dp"/>
        <TextView
                android:text="Icons: Google, Freepik, Dave Gandy, Oluwabenga Jesubanjo \n Music: bensound.com \n Copyright: FamilyRubies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/divider2" android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
                android:textColor="@android:color/white" android:fontFamily="@font/boogaloo" android:textSize="14sp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>